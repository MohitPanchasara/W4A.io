---
import Footer from "~/components/template/footer.astro";
import Header from "~/components/template/header.astro";
import "src/styles/theme.css";
import Dynamiclink from "~/components/molecules/dynamiclink.astro";
import LeftPara from "~/components/molecules/leftPara.astro";
import Whatisw4 from "~/components/organisms/research/whatisw4.astro";
import Researchbox from "~/components/organisms/research/researchbox.astro";
import Moreonw4 from "~/components/organisms/research/moreonw4.astro";
import ResearchGrid from "~/components/organisms/research/researchGrid.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("fr");

const { generator, site } = Astro;
const image = new URL("/public/Hero Section.png", site);
const items = [
    { text: "Home", urls: "/" },
    { text: "Research", urls: "/research" },
];
---

<!DOCTYPE html>


    <html lang={i18next.language} class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <script src="src/scripts/footerParalax.jsx"></script>
   <link rel="stylesheet" href="../fonts/satoshi-cufonfonts-webfont/app.css">
   <link rel="stylesheet" href="../styles/theme.css">
   
    <link rel="preload" as="font">
<script ></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
     <meta name="generator" content={generator} />

    <title>{t("research.title")}</title>
    <meta name="description" content={t("research.description")} />
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link
      rel="preload"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    
    <meta property="og:title" content="Astro" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={t("research.description")} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" /> 
    
    <script is:inline>
      const themeSaved = localStorage.getItem("theme");

      if (themeSaved) {
        document.documentElement.dataset.theme = themeSaved;
      } else {
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        document.documentElement.dataset.theme = prefersDark ? "dark" : "light";
      }

      window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", (event) => {
          if (!localStorage.getItem("theme")) {
            document.documentElement.dataset.theme = event.matches
              ? "dark"
              : "light";
          }
        });
    </script>
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />

    
   
    <div class=" block h-full w-full">
        
        <section>
            <Dynamiclink items={items} current= {t("research.dynamicLink_current")}/>
        </section>
        <section>
            <LeftPara heading={t("research.leftPara.head")}
      body= {t("research.leftPara.body")}
      image="../svg/research/book.svg" alink="/" button="Let's Get started"/>
        </section>

        <section>
            <Whatisw4 title={t("research.Whatisw4.title")} body={t("research.Whatisw4.body")} />
        </section>

        <section>
            <Researchbox />
        </section>

        <section>
            <Moreonw4 heading={t("research.moreOnW4")} />
        </section>
        <section>
            
            <Whatisw4 title={t("research.whatisW4_2.title")} body={t("research.whatisW4_2.body")} />
            <div id="researchGrid">
            <ResearchGrid />
            </div>
        </section>
        <section>
          <LeftPara heading= {t("research.leftPara2.head")}
      body= {t("research.leftPara2.body")}
      image="../svg/index/2arm.svg" alink="/" button="Explore The Community"/>
        </section>

    

  
      <Footer />
  </div>
  
  </body>
</html>

