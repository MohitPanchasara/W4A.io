---
import Footer from "~/components/template/footer.astro";
import Header from "~/components/template/header.astro";
import Herosection from "~/components/organisms/index/Herosection.astro";
import Whatisweb4 from "~/components/organisms/index/whatisweb4.astro";
import Scrollpart3 from "~/components/organisms/index/scrollpart3.astro";
import FooterParalaxScroll from "~/components/organisms/index/footerParalaxScroll.astro";
import LeftPara from "~/components/molecules/leftPara.astro";
import RightPara from "~/components/molecules/rightPara.astro";
import Scrollpart1 from "~/components/organisms/index/scrollpart1.astro";
import "src/styles/theme.css";
import Boxes from "~/components/organisms/index/boxes.astro";
import Beforeafter from "~/components/organisms/index/beforeafter.astro";
import Toggle from "~/components/organisms/index/toggle.astro";
import Leftpara2 from "~/components/molecules/leftpara2.astro";
import AIexchange from "~/components/molecules/AIexchange.astro";
import Imageslider from "~/components/organisms/index/imageslider.astro";
import i18next, { t, changeLanguage } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";

changeLanguage("en");

const { generator, site } = Astro;
const image = new URL("/public/Hero Section.png", site);

---

<!DOCTYPE html>


    <html lang={i18next.language} class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <script src="src/scripts/footerParalax.jsx"></script>
   <link rel="stylesheet" href="../fonts/satoshi-cufonfonts-webfont/app.css">
   <link rel="stylesheet" href="../styles/theme.css">
    <link rel="preload" as="font">
    <HeadHrefLangs />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
     <meta name="generator" content={generator} />

    <title>{t("index.title")}</title>
    <meta name="description" content={t("index.description")} />
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link
      rel="preload"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <!-- <title>{title}</title> -->
<!-- sdfd -->
    <meta property="og:title" content="Astro" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={t("index.description")}/>
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" /> 
    <!-- initialize theme -->
    <script is:inline>
      const themeSaved = localStorage.getItem("theme");
      console.log(themeSaved)

      if (themeSaved) {
        document.documentElement.dataset.theme = themeSaved;
      } else {
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        document.documentElement.dataset.theme = prefersDark ? "dark" : "light";
      }

      window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", (event) => {
          if (!localStorage.getItem("theme")) {
            document.documentElement.dataset.theme = event.matches
              ? "dark"
              : "light";
          }
        });

        console.log(document.documentElement.dataset.theme)
    </script>
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />

    
    <!-- <Nav /> -->
    <!-- <Splash /> -->
    <div class=" block h-full w-full">
      <section class="">
        <Herosection />
      </section>

      <section class="">
        <Whatisweb4 />        
      </section >
      <section>
        <Boxes />
      </section>

      <section class="overflow-hidden	">
        <Toggle />
      </section>
      

        <!-- <Scrollpart3 /> -->
        <!-- <Scrollpart1 /> -->
    
      
       <section>
        <div>
          <LeftPara heading= {t("index.leftPara1.heading")}
          body= {t("index.leftPara1.body")}
          image="../svg/index/brain.svg" alink="/" button={t("index.knowMore")}/>
        </div>
      </section>
      <section>
        <div>
            <RightPara head= {t("index.rightPara1.heading")}
            content={t("index.rightPara1.body")}
            photo="../svg/index/camera.svg" ahref="/" button={t("index.knowMore")}/>
        </div>
      </section>
      <section>

        <div>
          <LeftPara heading= {t("index.leftPara2.heading")}
          body= {t("index.leftPara2.body")}
          image="../svg/index/vr.svg" alink="/" button={t("index.knowMore")}/>
        </div>
      </section>
      <section>
        <div>
            <RightPara head={t("index.rightPara2.heading")}
            content= {t("index.rightPara2.body")}
            photo="../svg/index/life.svg" ahref="/" button={t("index.knowMore")}/>
        </div>
      </section>
      <section>
        <div>
            <LeftPara heading= {t("index.leftPara3.heading")}
            body= {t("index.leftPara3.body")}
            image="../svg/index/astronaut.svg" alink="/" button={t("index.knowMore")}/>
        </div>
      </section>

      <section>
        <!-- <Web2UseCases/>  -->
        <Beforeafter />
      </section>     

      <section class="h-[100vh]">
        <Imageslider />
      </section>

       <section>
          <AIexchange />
      </section>
      <section>
          <Leftpara2 />
      </section>
     
  <section class="scrollElement overflow:hidden h-[150vh] w-[100vw]">
    <FooterParalaxScroll class="z-1" />
  </section>
  <Footer />
  </div>

  </body>
</html>
