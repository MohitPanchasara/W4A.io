---
interface Props {
  text: string;
}

const { text } = Astro.props as Props;
---

<div class="group inline-block relative">
  <button
    class="py-2 px-2 rounded hover:underline inline-flex items-center text-mainBlue font-grotesk"
  >
    <span class="mr-2 text-base font-grotesk">
      <strong> <a href=""> {text}</a></strong>
    </span>
    <svg
      class="fill-current h-4 w-4"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
    >
      <path
        d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
      ></path>
    </svg>
  </button>
</div>
