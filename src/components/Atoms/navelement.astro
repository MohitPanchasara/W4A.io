---
import { Icon } from 'astro-icon';
export interface Props {

    items: Array<any>;
      text: string;
      url: string;

}

const { text, items, url} = Astro.props as Props;
---
<ul>
<li>
    <span class="mr-0 text-base font-grotesk text-textbluetheme pr-[10px]">
        <strong> <a href={url}> {text} <Icon name="ep:arrow-down-bold" class="textbluetheme  fa-bold w-3 bold h-2 border-1 inline-block" /> </a></strong>
        
    </span>


    <ul>
        {items.map((item) => (
        <li>
          <a href= {item.link}>
            {item.content}
            </a>
            
        </li>
        ))}
    </ul>

</li>
</ul>

<style>
  ul {
    display: inline-block;
  }
    li {
  font-size: 1rem;
  font-weight: 400;
  color: rgb(111, 0, 255);
  display: inline-block;
  padding: 5px;
  position: relative;
}
li ul {
  display: none;
  background-color: #fafafa;
}
li:hover {
  cursor: pointer;
  /* background-color: #f2f2f2; */
}
 li:hover ul {
  display: block;
  margin-top: 15px;
  width: 200px;
  left: 0;
  position: absolute;
  border-radius: 30px;
}
li:hover ~ ul {
      animation: clipPath 0.25s ease-out 1 forwards;        
    transition: clip-path 0.25s ease-out, left 0.15s ease-out, height 0.15s ease-out;
    opacity: 1;
    right: auto;
}
li:nth-of-type(1):hover ~ ul,
li:nth-of-type(4):hover ~ ul {
    clip-path: inset(0 28.75em 0 0 round 10px);
    height: 14em;
}

li:nth-of-type(2):hover ~ ul,
li:nth-of-type(3):hover ~ ul {
    clip-path: inset(0 15em 0 0 round 10px);
}

li:nth-of-type(1):hover ~ ul {
    left: calc(-9em + -1px);
}
li:nth-of-type(2):hover ~ ul{
    left: calc(-6.5em + -1px);
    height: 18.75em;
}
li:nth-of-type(3):hover ~ ul{
    left: calc(2.75em + 1px);
    height: 24.5em;
}
li:nth-of-type(4):hover ~ ul {
    left: calc(19em + 1px);
}
@keyframes clipPath {
    0% {
        opacity: 0;
    }
    100% {
        transform: rotateX(0deg) scale(1);
        top: 4.5em;
        opacity: 1;        
    }
}

li:hover ul li {
  display: block;
  background-color: #fafafa;
  border-radius: 10px;
}
