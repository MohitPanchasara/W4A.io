---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="font-grotesk flex scroll-mt-24 flex-col items-center gap-4 space-y-8 py-20 sm:py-40"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-4xl sm:text-3xl"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center font-extrabold sm:font-bold text-2xl sm:text-sm sm:m-[20px]">
    <slot name="lead" />
  </p>
  <slot />
</section>
