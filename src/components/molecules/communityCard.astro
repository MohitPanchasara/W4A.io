---

export interface Props{
    heading: string;
    content: string;
    image: string;
}

const {heading, content, image}=Astro.props;
---


<style>
    .card{
    width: 565px;
  
    border: 1px solid rgba(10, 9, 15, 0.5);
    }
    
    </style>
    
    
        <div class="card box-border h-auto  bg-white">
        <a href="/community" >
            <div class="w-inherit pt-5 pr-2 " data-aos="fade-right" data-aos-duration="2000">
                <div class="float-right">
                <img class="align-right" src={image} alt="CardImage">

                </div>
            </div>
    
            <div class="pt-[260px] px-5 pb-5" >
    
                <div class=""> <span class="w-60 h-8 font-bold font-grotesk text-lg text-purple-700" data-aos="fade-down"
                    >{heading}</span></div>
                <div class="pt-3" data-aos="fade-up"> <span class=" h-5 font-medium text-sm text-gray-900"> {content}</span></div>
            </div>
        </a>
    </div>