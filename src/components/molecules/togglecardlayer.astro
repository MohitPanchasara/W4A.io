---
export interface Props {
   body1: string,
  body2: string,
  body3: string,
  body4: string,
}

const { body1, body2, body3, body4 } = Astro.props;
---
<div class="container1 max-w-[80vw] font-grotesk ">
    <div class="card ">
        <div class="box ">
        <div class="content">
            <!-- <h2>Web 1.0</h2> -->
            <h3>Web 1.0</h3>
            <p>{body1}</p>
            <!-- <a href="#">Read More</a> -->
        </div>
        </div>
    </div>
    <div class="card ">
        <div class="box ">
        <div class="content">
            <h3>Web 2.0</h3>
            <p>{body2}</p>
        </div>
        </div>
    </div>
       <div class="card ">
        <div class="box ">
        <div class="content">
            <h3>Web 3.0</h3>
            <p>{body3}</p>
        </div>
        </div>
    </div>
       <div class="card ">
        <div class="box ">
        <div class="content">
            <h3>Web 4.0</h3>
            <p>{body4}</p>
        </div>
        </div>
    </div>
</div>

<style>

.container1 {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px 0;
  max-width: 80vw;
}
.container1 .card {
  position: relative;
  min-width: 320px;
  height: 280px;
  padding-top: 60px;
  margin: 5px;
  /* margin-top: 80px; */
  border: none;
  transition: 0.5s;
}

.container1 .card:nth-child(1) .box .content a {
  background: #e51abd;
}

.container1 .card:nth-child(2) .box .content a {
  background: #e51abd;
}

.container1 .card:nth-child(3) .box .content a {
  background: #e51abd;
}
.container1 .card:nth-child(4) .box .content a {
  background: #e51abd;
}

.container1 .card:nth-child(1) .box {
  background: #B0C8FF;
}
.container1 .card:nth-child(2) .box {
  background: #D2B5FB;
}
.container1 .card:nth-child(3) .box {
  background: #EEB4E3;
}
.container1 .card:nth-child(4) .box {
  background: #FEBEC9;
}

.container1 .card .box {
  position: absolute;
  top: 20px;
  left: 20px;
  right: 20px;
  bottom: 20px;
  /* background: #2a2b2f; */
  border-radius: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  transition: 0.5s;
}

.container1 .card .box:hover {
  transform: translateY(-5px);
}

.container1 .card .box:before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
}

.container1 .card .box .content {
  padding: 20px;
  text-align: center;
}

.container1 .card .box .content h2 {
  position: absolute;
  top: -10px;
  right: 30px;
  font-size: 8rem;
  /* color: rgba(255, 255, 255, 0.1); */
  color: black;
}

.container1 .card .box .content h3 {
  font-size: 2.0rem;
  color: #0A090F;
  z-index: 1;
  transition: 0.5s;
  margin-bottom: 25px;

  font-style: normal;
font-weight: 900;
/* font-size: 24px; */
line-height: 120%;
/* identical to box height, or 29px */

text-align: center;

color: #0A090F;
}

.container1 .card .box .content p {
font-style: normal;
font-weight: 500;
font-size: 20px;
line-height: 120%;
/* or 24px */

text-align: center;

color: #0A090F;
}

.container1 .card .box .content a {
  position: relative;
  display: inline-block;
  padding: 2px 20px;
  background: black;
  border-radius: 5px;
  text-decoration: none;
  color: white;
  margin-top: 20px;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  transition: 0.5s;
}
.container1 .card .box .content a:hover {
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.6);
  color: #000;
}
/* @media all and (max-width:30em){
    a.button4{
    display:block;
    margin:0.2em auto;
    }
} */

.fade {
	transition: opacity .15s linear
}

@media (prefers-reduced-motion:reduce) {
	.fade {
		transition: none
	}
}

.fade:not(.show) {
	opacity: 0
}

</style>