---
export interface Props {
  heading: string,
  body: string,
  image: string,
  alink: string;
  button: string;
}

const { heading, body, alink, image, button } = Astro.props;
---




<div class="flex justify-evenly p-4 pt-20 sm:p-0 sm:flex-wrap-reverse w-[100vw] sm:pt-10 align-baseline">

    <div class="sm:p-0 align-middle pt-15">
       <div><p class="text-3xl sm:text-2xl font-grotesk font-bold text-primary sm:pt-4">{heading}</p></div>
        <div class="pt-5 sm:pt-2"><p class="font-satoshi w-[50vw] sm:w-[80vw] font-medium text-md sm:text-sm text-secondary flex-none order-1 flex-grow-0">{body}</p></div>
            <div class="pt-5 sm:pt-2">
                <button class="items-center w-auto pl-[10px] pr-[10px] sm:w-40 h-10 bg-textblue rounded text-white "><a href={alink}> {button} </a></button>

            </div>
          
    </div>

    <div class="align-middle sm:w-[80vw]">
        <img src={image} alt="nothinh" width="400" height="180">         
    </div>

</div>