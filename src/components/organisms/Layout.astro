---
import "@fontsource/space-grotesk";

import Nav from './nav.astro';
import Footer from './footer.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color">
    <meta name="description" content="The W4a.io community is home to hundreds of thousands of developers, technologists, designers, users, HODLers and enthusiasts.">
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" /><link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <!-- <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap"
      rel="stylesheet"
    /> -->
    <title>{title}</title>
  </head>
  <body
    class="h-[100vh] w-[100vw] overflow-x-hidden bg-default text-base selection:bg-secondary selection:text-white font-grotesk"
  >
    <!-- <Nav /> -->
    <!-- <Head /> -->
    <div class="lg:px-0">
      <slot />
    </div>
   
      
      <Footer/>
    
  </body>
</html>
