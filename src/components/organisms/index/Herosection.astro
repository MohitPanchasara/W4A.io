              <img class="block m-auto" src="../svg/index/herologo.svg" width="200" height="52" alt="W4A.io home logo"  />
            </div>
            

            <!-- human&Machine text change -->
           
            <div class="absolute m-auto w-[100vw] text-center z-10 pt-[1vw] md:p-[2vw] sm:pt-[3vh] sm:text-3xl text-2xl md:text-6xl">  <HeroText /> </div>
            
      
            <!-- paragraph -->
            <div class="top-[30%] m-auto absolute w-[100vw] text-center z-10 p-[1vw] md:p-[2vw] sm:p-[5vw] 
            font-medium  text-textblue font-satoshi h-20 
            sm:h-[15vh] text-[32px] sm:m-[10px] sm:text-[100px] sm:z-10 sm:p-[10px] sm:translate-x-[-10px]">
              <p>{t("index.heroSection.para.p1")}</p>
              <p>{t("index.heroSection.para.p2")}</p>
            </div>
            
            <!-- join community -->
            <div class="top-[45%] absolute w-[100vw] text-center z-10"><HomeButton /></div>
        </div>
        
     
