            <img src="../svg/index/flyingcar2.svg" class="car2 z-1" alt="Laptop paralax image front" />
            <img src="../svg/index/flyingcar3.svg" class="car3 z-2" alt="Laptop paralax image front" />
            <!-- <img src="../svg/index/drone1.svg" class="drone1 z-3" alt="Laptop paralax image front" /> -->
            
            <!--cars end-->
              
            <img src="../images/parallaxBG.svg" class="absolute overLap z-0 bottom-0 w-[100vw]" alt="Laptop paralax image" />
            <img src="../images/parallaxMG.svg" class="absolute overLap z-2 bottom-0 w-[100vw]" alt="Laptop paralax image" />
            <img src="../svg/index/drone1.svg" class="absolute drone1 z-3" alt="Laptop paralax image front" />
            <img src="../images/parallaxFG.svg" class="absolute z-4 bottom-0 w-[100vw]" alt="Laptop paralax image front" />
