        <div class="sm:hidden md:hidden bottom-0">
            <div class="absolute z-1">
              <svg class="sunSvg" width="100" height="100" viewBox="0 0 260 260" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="130" cy="130" r="130" fill="white" fill-opacity="1"/>
                </svg>
