            <img src="../svg/index/buynow.svg" class="bottom-0 z-6 blink2" alt="image front" />



            <style>

              .blink1 {
                animation: hideshow 3s ease infinite;
                transform: translate(278px, 170px);
              }
              @keyframes hideshow {
                0% { opacity: 1; }
                25% { opacity: 0; }
                50% { opacity: 1; }
                75% { opacity: 0; }
                100% { opacity: 1; }
              }
              .blink2 {
                animation: hideshow 3s ease infinite;
                transform: translate(575px, 140px);
              }
              
              .car1 {
                animation: car1 16s ease infinite;
              }

              @keyframes car1 {
                0%{
                   transform: translate(100vw, 0px);
                    animation-timing-function:ease-in
                }

                35% {
                    transform: translate(100vw, 0px);
                    animation-timing-function:linear
                }

                65% {
                    transform: translate(50vw, 50px);
                    animation-timing-function:linear
                }

                100% {
                    transform: translate(-150px, 100px);
                    animation-timing-function:ease-in
                }
              }
              .car2 {
                animation: car2 13s ease infinite;
              }

              @keyframes car2 {
                0%{
                   transform: translate(-100px, -100px);
                    animation-timing-function:ease-in
                }

                30% {
                    transform: translate(100px, -60px);
                    animation-timing-function:ease-in
                }

                70% {
                    transform: translate(50vw, 0px);
                    animation-timing-function:linear
                }

                100% {
                    transform: translate(100vw, -30px);
                    animation-timing-function:ease-in
                }
              }
              .car3 {
                animation: car3 15s ease infinite;
              }

              @keyframes car3 {
                0%{
                   transform: translate(100vw, 0px);
                    animation-timing-function:linear
                }

                30% {
                    transform: translate(60vw, -40px);
                    animation-timing-function:linear
                }

                70% {
                    transform: translate(30vw, -60px);
                    animation-timing-function:linear
                }

                100% {
                    transform: translate(-50px, -30px);
                    animation-timing-function:ease-in
                }
              }
              .drone1 {
                animation: drone1 12s ease infinite;
              }

              @keyframes drone1 {
                0%{
                   transform: translate(100vw, 0px);
                    animation-timing-function:linear
                }

                30% {
                    transform: translate(100vw, 0px);
                    animation-timing-function:linear
                }

                70% {
                    transform: translate(30vw, 60px);
                    animation-timing-function:linear
                }

                100% {
                    transform: translate(-50px, 100px);
                    animation-timing-function:ease-in
                }
              }
              .overLapX {
                
                transform: translate(100px, 0px);
                /* z-index: 0; */
                animation: trax 5s both;
              }
              @keyframes trax {
                100%{
                  transform: translate(125px, 0px);
                }
              }
            </style>




            
        </div>

        <!-- for tablet -->
        <div class="h-[300px] w-auto sm:w-20 sm:hidden lg:hidden">
            <div class="absolute z-0">
              <svg class="sunSvgMD" width="200" height="200" viewBox="0 0 260 260" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="130" cy="130" r="130" fill="white" fill-opacity="0.6"/>
                </svg>
            </div>
            
            <img src="../images/Parallax.svg" class="overLapMD absolute z-1 bottom-0 w-[100vw]" alt="Laptop paralax image" />
            <img src="../images/Parallax.svg" class="absolute z-2 bottom-0 w-[100vw]" alt="Tablet paralax image front" />
        </div>

        <!-- for mobile -->
        <div class="h-[300px] w-auto sm:w-20 md:hidden lg:hidden">
            <div class="absolute z-0">
              <svg class="sunSvgSM" width="200" height="200" viewBox="0 0 260 260" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="130" cy="130" r="130" fill="white" fill-opacity="0.6"/>
                </svg>
            </div>
            
              <img src="../images/ParallaxMobile.svg" class="overLapSM absolute z-1 bottom-0 w-[100vw]" alt="Mobile paralax image" />
              <img src="../images/ParallaxMobile2.svg" class="absolute z-2 bottom-0 w-[100vw]" alt="Mobile paralax image front" />
        
        </div>



