---

<style>
  #grad2 {
    /* background: linear-gradient(180deg, #0E0A1B 0%, #22193E 50.83%, #302358 102.74%, #362762 159.09%, #463380 207.64%); */
    background: linear-gradient(180deg, #FFFFFF 100.91%, #6E54FF 205%);
    /* animation: change 5s both; */

  }
  @keyframes change {
    0% {
      background: linear-gradient(180deg, #0E0A1B 0%, #22193E 24.48%, #302358 49.48%, #362762 76.62%, #463380 100%);
    }
    100 % {
      background: linear-gradient(180deg, #0E0A1B 0%, #22193E 50.83%, #302358 102.74%, #362762 159.09%, #463380 207.64%);

    }
  }

    #grad0 {
      /* background: linear-gradient(180deg, #FFFFFF -0.86%, #6E53FF 99.6%); */
      background: linear-gradient(180deg, #FFFFFF 20.91%, #6E54FF 99.6%);
    }

   #grad1 {
   
    animation: colorchange 5s both;
   
  }
  @keyframes colorchange {
     0% {
      background: linear-gradient(
      180deg,
      #ffffff 12%,
      #0894ff 63.49%,
      #6e53ff 87.63%,
      #b038ea 97.77%,
      #f95088 107.91%,
      #ff6f62 117.33%
    );
    /* 
    3 background-image: linear-gradient(to right top, #6e53ff, #7352fe, #7850fd, #7d4ffb, #824dfa);
    4 background-image: linear-gradient(to right top, #b038ea, #c130e0, #cf28d5, #db21cb, #e51cc0);
    6 background-image: linear-gradient(to right top, #ff6f62, #ff6a6e, #ff667b, #ff6388, #ff6295);
    */
    }  12% {
      background: linear-gradient(
      180deg,
      #ffffff 12%,
      #068eff 63.49%,
      #7850fd 87.63%,
      #cf28d5 97.77%,
      #ff667b 107.91%,
      #ff6f62 117.33%
    );
    }
    25% {
      background: linear-gradient(
      180deg,
      #ffffff 12%,
      #0f88ff 63.49%,
      #824dfa 87.63%,
      #e51cc0 97.77%,
      #f95088 107.91%,
      #ff6295 117.33%
    );
    }
    /* 
    background-image: linear-gradient(to right top, #0f88ff, #1884ff, #2181ff, #297dff, #3179ff);
    background-image: linear-gradient(to right top, #824dfa, #864cf9, #8b4af8, #8f49f6, #9347f5);
    background-image: linear-gradient(to right top, #e51cc0, #ed1ab6, #f41dab, #fa22a1, #fe2a98);
    background-image: linear-gradient(to right top, #ff6295, #fa63a2, #f465af, #eb68bc, #e16cc8);
    */
    38% {
      background: linear-gradient(
      180deg,
      #ffffff 12%,
      #2181ff 63.49%,
      #8b4af8 87.63%,
      #f41dab 97.77%,
      #f95088 107.91%,
      #f465af 117.33%
    );
    }
    50% {
      background: linear-gradient(
      180deg,
      #ffffff 12%,
      #3179ff 63.49%,
      #9347f5 87.63%,
      #fe2a98 97.77%,
      #f95088 107.91%,
      #e16cc8 117.33%
    );
    }
    63% {
      background: linear-gradient(
      180deg,
      #ffffff 12%,
      #4171ff 63.49%,
      #9b44f3 87.63%,
      #ff3c87 97.77%,
      #f95088 107.91%,
      #c676de 117.33%
    );
    }
    75% {
      background: linear-gradient(
      180deg,
      #ffffff 12%,
      #5168ff 63.49%,
      #a240f0 87.63%,
      #ff4d78 97.77%,
      #f95088 107.91%,
      #a281ef 117.33%
    );
    }
    80% {
      background: linear-gradient(
        180deg,
        #ffffff 18.27%,
        #6e53ff 63.49%,
        #a63eef 84.9%,
        #ff5672 99.08%,
        #f95088 114.37%,
        #8c86f5 126.04%
      );
    } 
    87% {
      background: linear-gradient(
        180deg,
        #ffffff 18.27%,
        #6e53ff 63.49%,
        #a93ced 84.9%,
        #ff5e6c 99.08%,
        #f95088 114.37%,
        #728bfa 126.04%
      );
    } 
    94% {
      background: linear-gradient(
        180deg,
        #ffffff 18.27%,
        #6e53ff 63.49%,
        #ad3aec 84.9%,
        #ff6766 99.08%,
        #f95088 114.37%,
        #5090fe 126.04%
      );
    } 
    100% {
      background: linear-gradient(
        180deg,
        #ffffff 18.27%,
        #6e53ff 63.49%,
        #b038ea 84.9%,
        #ff6f62 99.08%,
        #f95088 114.37%,
        #0894ff 126.04%
      );
    } 
  } 
 /* (12) 
 background-image: linear-gradient(to right top, #0894ff, #0691ff, #068eff, #0a8bff, #0f88ff);
 */

  /*1st (63)
   background-image: linear-gradient(to right top, #3179ff, #3975ff, #4171ff, #496dff, #5168ff);
  background-image: linear-gradient(to right top, #9347f5, #9745f4, #9b44f3, #9e42f1, #a240f0);
  background-image: linear-gradient(to right top, #fe2a98, #ff338f, #ff3c87, #ff447f, #ff4d78);
   4th 
background-image: linear-gradient(to right top, #e16cc8, #d571d3, #c676de, #b57ce7, #a281ef); */

  .overLapX {
    /* transform: translate(100px); */
    z-index: 0;
    animation: trax 5s both;
  }

  .overLap {
    transform: translate(100px, -30px);
    animation: trax 5s both;
  }
  @keyframes trax {
    100%{
      transform: translate(125px, -30px);
    }
  }
  .overLapMD {
    /* /* bottom: 0; */
    transform: translate(50px, -20px);
    animation: traxMD 5s forwards;
  }

  @keyframes traxMD {
    100%{
      transform: translate(80px, -20px);
    }
  }

  .overLapSM {
    transform: translate(60px, 0px);
    animation: traxSM 5s forwards;
  }

  @keyframes traxSM {
    100%{
      transform: translate(90px, 0px);
    }
  }


  .sunSvg {
    transform: translate(1vw,-600px);
    animation: sunani 5s forwards; 
    display: absolute;
    z-index: -1;



  }

  @keyframes sunani {
    100% {
      width: 450px;
      height: 450px;
      transform: translate(35vw, 30vh);
      
      opacity: 1;
    }
  }
   .sunSvgMD {
    transform: translate(1vw,-300px);
    animation: sunaniMD 5s forwards;

  }
  @keyframes sunaniMD {
    100% {
      width: 450px;
      height: 450px;
      transform: translate(20vw, 16vh);
      border-radius: 10000px;
      opacity: 0.5;
    }
  }

  .sunSvgSM {
    transform: translate(1vw,-400px);
    animation: sunaniSM 5s forwards;
    width: 100px;
    height: 100px;

  }
  @keyframes sunaniSM {
    100% {
      width: 300px;
      height: 300px;
      transform: translate(15vw, 10vh);
      border-radius: 10000px;
      opacity: 0.5;
    }
  }
 

</style>
