}
.card {
  padding: 1rem;
/* border: 1px solid #0A090F; */

}
.cards {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  gap: 1rem;
}
@media (min-width: 600px) {
  .cards { 
    grid-template-columns: repeat(2, 1fr);
 }
}
@media (min-width: 900px) {
  .cards { grid-template-columns: repeat(2, 1fr); }
}

